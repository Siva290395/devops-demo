pipeline {
    agent any

    stages {

        stage('Clone Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Siva290395/devops-demo.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t mywebsite .'
            }
        }

        stage('Run Docker Container') {
            steps {
                sh '''
                docker stop mycontainer || true
                docker rm mycontainer || true
                docker run -d -p 80:80 --name mycontainer mywebsite
                '''
            }
        }

    }
}
